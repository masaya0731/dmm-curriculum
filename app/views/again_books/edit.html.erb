<!-- Bookers2の投稿編集画面 -->
<%= render "layouts/again_header" %>
<div class="container">
  <div class="row mt-3">
    <div class="mx-auto">
      <h1 class="col-12">Editing Book</h1>
      <%= form_with model:@book, url:"/again_books/#{@book.id}", local:true do |f| %>

        <div class="form-grop">
          <label>Title</label><br>
          <%= f.text_field :title, class:"form-control" %><br>
        </div>
        <div class="form-grop">
          <label>Opinion</label><br>
          <%= f.text_area :body, class:"form-control" %><br>
        </div>

        <div class="form-grop mb-3">
          <%= f.submit "Update Books", class:"btn btn-success" %><br>
        </div>
        <%= link_to "Show", again_book_path(@book) %>
        |
        <%= link_to "Back", again_books_path %>
      <% end %>
    </div>
  </div>
</div>
<%= render "layouts/again_footer" %>
