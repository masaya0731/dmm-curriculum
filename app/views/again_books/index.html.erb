<!-- Bookers2の投稿一覧画面 -->
<%= render "layouts/again_header" %>
<div class="container px-5 px-sm-0">
  
  <div class="row mt-3">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'again_users/user', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'again_books/form', again_book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <% user = User.find(book.user_id) %>
            <tr>
              <td>
                <%= link_to again_user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td>
                <%= link_to again_book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render "layouts/again_footer" %>