<!-- Bookers2の投稿詳細画面 -->
<%= render "layouts/again_header" %>
<div class="container px-5 px-sm-0">
  <div class="row mt-3">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'again_users/user', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'again_books/form', again_book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <td>
          <%= link_to again_user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><br>
            <%= @user.name%>
          <% end %>
        </td>
        <td>
          <%= link_to again_book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
         <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to "Edit", edit_again_book_path(@book), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", again_book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-sm btn-danger" %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>
<%= render "layouts/again_footer" %>