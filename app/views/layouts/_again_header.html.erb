<!-- Bookers2ヘッダー -->
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to again_top_path, class:"navbar-brand" do %>
      <span>Bookers</span>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-controls="navbarNavDropdown" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <% if user_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li><%= link_to ' Home', again_user_path(current_user.id), class:"fas fa-home nav-link text-light font-weight-bold"%></li>
          <li><%= link_to " Users", again_users_path, class:"fas fa-users nav-link text-light font-weight-bold" %></li>
          <li><%= link_to ' Books', again_books_path, class:"fas fa-book-open nav-link text-light font-weight-bold" %></li>
          <li><%= link_to " logout", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-light font-weight-bold" %></li>
        </ul>
        <% else %>
        <ul class="navbar-nav ml-auto">
          <li><%= link_to ' Home', again_top_path, class:"fas fa-home nav-link text-light font-weight-bold"%></li>
          <li><%= link_to " About", again_about_path, class:"fas fa-link nav-link text-light font-weight-bold" %></li>
          <li><%= link_to " sign up", new_user_registration_path, class:"fas fa-user-plus nav-link text-light font-weight-bold" %></li>
          <li><%= link_to " login", new_user_session_path, class:"fas fa-sign-in-alt nav-link text-light font-weight-bold" %></li>
        </ul>
        <% end %>
      </div>
    </div>
  </nav>
</header>