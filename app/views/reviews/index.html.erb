<div class="container">
  <div class="row">
    <h1 class="col-12 mt-3"><%= link_to 'Topページ', root_path %><h1>
    <p class="bookers1-logo col-12"><%= link_to "BookersTop", reviews_top_path %></p>
  </div>
  <div class="row">
    <h3 class="col-12">Books</h3>
  </div>
  <div class="row">
  <table class="col-12">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="mt-3"><%= post.title %></td>
            <td class="mt-3"><%= post.body %></td>
            <td>
              <span class="review-btn mr-1"><%= link_to "show", review_path(post), class: "review-btn" %></span>
              <span class="review-btn mr-1"><%= link_to "edit", edit_review_path(post), class: "review-btn" %></span>
              <span class="review-btn"><%= link_to "destroy", review_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" %></span>
            </td>
          </tr>
        <% end %>
       </tbody>
     </table>
     <div class="row">
      <h5 class="col-12 mt-3 font-weight-bold">New Book</h5>
      <%= form_with model:@post, url:'/reviews', local:true do |f| %>
      <h6 class="col-12">Title</h6>
      <%= f.text_field :title, class: "col-12" %>
      <h6 class="mt-3 col-12">Body</h6>
      <%= f.text_area :body, class: "col-12" %><br>
      <%= f.submit 'Create Book', class: "mt-3" %>
      <% end %>
    </div>
  </div>
</div>