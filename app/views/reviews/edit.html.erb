<div class="container">
  <div class="row mt-3">
    <h3 class="col-12 font-weight-bold">Editing Book</h3>
    <%= form_with model:@post, url:"/reviews/#{@post.id}", local:true do |f| %>
      <h6 class="col-12">title</h6>
      <%= f.text_field :title, class: "col-12" %>
      <h6 class="mt-3 col-12">body</h6>
      <%= f.text_area :body, class: "col-12" %><br>
      <%= f.submit 'Update Book', class: "mt-2" %>
    <% end %>
    <div class="mt-3 col-12">
      <span class="review-btn"><%= link_to "Show", review_path(@post) %></span>
      |
      <span class="review-btn"><%= link_to "Back", reviews_path %></span>
    </div>
  </div>
</div>